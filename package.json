{
  "name": "englitune",
  "displayName": "Englitune",
  "description": "Your personalized English learning companion that helps you master the language through spaced repetition and audio-based practice.",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://englitune.silvioprog.dev",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "deploy": "wrangler deploy --minify",
    "generate-pwa-icons": "pwa-assets-generator",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@marsidev/react-turnstile": "^1.4.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "pluralize": "^8.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "usehooks-ts": "^3.1.1",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@babel/plugin-bugfix-firefox-class-in-computed-class-key": "^7.28.5",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.4",
    "@types/pluralize": "^0.0.33",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-plugin-playwright": "^2.5.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vite-plugin-beasties": "^0.3.5",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.58.0"
  }
